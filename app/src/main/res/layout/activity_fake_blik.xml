<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/blikDescription"
                android:src="@drawable/logo_blik"
              app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/blikCodeEditText"/>

    <EditText android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:inputType="number"
              app:layout_constraintTop_toBottomOf="@+id/blikDescription"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/blikConfirm"
              android:id="@+id/blikCodeEditText"/>

    <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blikConfirm"
            app:layout_constraintTop_toBottomOf="@+id/blikCodeEditText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
     android:text="@string/confirm"/>



</androidx.constraintlayout.widget.ConstraintLayout>